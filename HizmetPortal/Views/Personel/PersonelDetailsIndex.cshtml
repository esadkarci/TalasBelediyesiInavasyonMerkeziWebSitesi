@model EntityLayer_HizmetPortal.Concrate.Personel

@{
    ViewBag.Title = "PersonelDetailsIndex";
    Layout = "~/Views/Shared/UygulamaLayout.cshtml";
}

<div class="container-fluid personel-detail">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-10">
            <div class="detail-card">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <img src="@Model.PersonelImage" class="img-fluid rounded" alt="@Model.PersonelIsim @Model.PersonelSoyisim">
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="text-content">
                            <center><h2>@Model.PersonelIsim @Model.PersonelSoyisim</h2></center>
                            <center><h4>@Model.PersonelUnvan</h4></center>
                            <p>@Model.PersonelCV</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .personel-detail {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

        .personel-detail .detail-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            height: auto;
            padding: 20px;
        }

            .personel-detail .detail-card .row {
                margin: 0;
            }

            .personel-detail .detail-card img {
                max-height: 100%;
                width: auto;
                object-fit: cover;
                border-radius: 10px;
            }

        .personel-detail .text-content {
            padding: 20px;
        }

        .personel-detail p {
            overflow-wrap: break-word;
            word-break: break-word;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .personel-detail h2, .personel-detail h4 {
            color: var(--bs-primary);
            overflow-wrap: break-word;
            word-break: break-word;
            line-height: 1.6;
            margin-bottom: 20px;
        }
</style>
