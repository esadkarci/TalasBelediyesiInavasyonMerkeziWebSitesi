@model EntityLayer_HizmetPortal.Concrate.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>güncelleme sayfası</h1>
<br />
@using (Html.BeginForm("Edit", "AdminUser", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("ID")
        @Html.TextBoxFor(x => x.UserId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Name")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Surname")
        @Html.TextBoxFor(x => x.UserSurName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Password")
        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Email")
        @Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Rank")
        @Html.TextBoxFor(x => x.UserRank, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("User Statues")
        @Html.TextBoxFor(x => x.UserStatues, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
}