@model EntityLayer_HizmetPortal.Concrate.Project

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Proje Güncelleme Sayfası</h1>
<br />
@using (Html.BeginForm("Edit", "AdminProject", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Project Id")
        @Html.TextBoxFor(x => x.ProjectId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Project Title")
        @Html.TextBoxFor(x => x.ProjectTitle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Project Description")
        @Html.TextAreaFor(x => x.ProjectDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Project Image")
        <input type="file" name="ProjectImage" class="form-control" />
    </div>
    @Html.Label("Aşama seçiniz")
    <select class="form-control" name="StageId">
        @foreach (var stage in ViewBag.Stages)
        {
            <option value="@stage.StageId">@stage.StageName</option>
        }
    </select>
    <button type="submit" class="btn btn-success">Güncelle</button>
}
