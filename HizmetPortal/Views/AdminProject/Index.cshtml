@using EntityLayer_HizmetPortal.Concrate
@model List<Project> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ProjectId</th>
        <th>ProjectName</th>
        <th>ProjectTitle</th>
        <th>ProjectDestcription</th>
        <th>ProjectImage</th>
        <th>ProjectStatues</th>
        <th>StageId</th>
        <th>DevreDışı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectName</td>
            <td>@item.ProjectTitle</td>
            <td>@item.ProjectDestcription</td>
            <td>@item.ProjectImage</td>
            <td>@item.ProjectStatues</td>
            <td>@item.StageId</td>
            <td><a href="/AdminProject/ToggleStatus/@item.ProjectId" class="btn btn-danger">DevreDışı</a></td>
            <td><a href="/AdminProject/Edit/@item.ProjectId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/AdminProject/Delete/@item.ProjectId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<br />
<a href="/AdminProject/Create" class="btn btn-info">yeni kategori</a>