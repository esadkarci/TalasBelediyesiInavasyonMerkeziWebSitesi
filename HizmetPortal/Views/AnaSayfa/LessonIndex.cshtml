@using EntityLayer_HizmetPortal.Concrate
@model List<Project>

@{
    
    Layout =null;
}


<!-- Your header section -->
<div class="header-container">
    <h1>@ViewBag.Title</h1>
</div>

<!-- Include Swiper's CSS -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<div class="container">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            @foreach (var project in Model)
            {
                <div class="swiper-slide">
                    <div class="project-div">
                        <img src="@project.ProjectImage" alt="Project Image">
                        @if (project.StageId == 1)
                        {
                            <a href="/Projeler/YapılmasıPlananProjelerIndex" class="label label-success" style="background-color: red;">Hazırlık Aşaması</a>
                        }
                        else if (project.StageId == 2)
                        {
                            <a href="/Projeler/YapımıDevamEdenProjelerIndex" class="label label-success" style="background-color: orange;">Yapımı Devam Ediyor</a>
                        }
                        else if (project.StageId == 3)
                        {
                            <a href="/Projeler/YapımıTamamlananProjelerIndex" class="label label-success" style="background-color: green;">Yapımı Tamamlandı</a>
                        }
                        <center>
                            <a href="/Projeler/ProjelerDetaylarIndex/@project.ProjectId" style="text-decoration: none;">
                                <p>@project.ProjectTitle</p>
                            </a>
                        </center>
                    </div>
                </div>
            }
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
        <!-- Add Navigation -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>

<!-- Include Swiper's JavaScript -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
    var swiper = new Swiper('.swiper-container', {
        slidesPerView: 3,
        spaceBetween: 30,
        loop: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>

<style>
    /* Header-specific styles */
    .header-container h1 {
        font-size: 24px;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Swiper-specific styles */
    .swiper-container {
        padding: 20px 0;
        margin-bottom: 30px;
        overflow: hidden; /* Prevents overflow */
        width: 100%; /* Ensures it doesn't exceed parent width */
    }

    .swiper-slide {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 100%; /* Prevents slides from exceeding container width */
    }

    .project-div {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        width: 100%;
        border-radius: 15px;
        overflow: hidden;
    }

        .project-div img {
            width: 100%;
            object-fit: cover;
        }

        .project-div .label {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #ffffff;
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 3px;
            z-index: 1;
        }

        .project-div p {
            overflow-wrap: break-word;
            word-break: break-word;
            color: #ffffff;
            background-color: var(--bs-primary);
            text-align: center;
            padding: 10px;
            margin: 0;
        }
</style>
