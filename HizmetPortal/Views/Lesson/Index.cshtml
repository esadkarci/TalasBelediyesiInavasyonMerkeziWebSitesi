@using EntityLayer_HizmetPortal.Concrate
@model List<Lesson>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UygulamaLayout.cshtml";
}

<br />
<br />
<br />

<div class="container">
    <div>
        <div class="row">
            @foreach (var lesson in Model)
            {
                <div class="col-md-4">
                    <div class="lesson-div">
                        <img src="@lesson.LessonImage" alt="Lesson Image">

                        <center>
                            <a href="/Lesson/LessonDetaylarIndex/@lesson.LessonId" style="text-decoration: none;">
                                <p>@lesson.LessonTitle</p>
                            </a>
                        </center>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<style>
    .lesson-div {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        width: 100%;
        border-radius: 15px;
        overflow: hidden;
    }

        .lesson-div img {
            width: 100%;
            object-fit: cover;
        }

        .lesson-div .label {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #ffffff;
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 3px;
            z-index: 1;
        }

        .lesson-div p {
            overflow-wrap: break-word;
            word-break: break-word;
            color: #ffffff;
            background-color: var(--bs-primary);
            text-align: center;
            padding: 10px;
            margin: 0;
        }
</style>


