
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Giriş</title>

    <!-- Bu şablon için özel fontlar -->
    <link href="~/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Bu şablon için özel stiller -->
    <link href="~/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Kart Gövdesi içinde iç içe satır -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image">
                        <img src="~/startbootstrap-sb-admin-2-gh-pages/img/Logot-Kare-Renkli-v1-2k.png" alt="Logo" style="width: 500px; height: 500px;">
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hoşgeldiniz!</h1>
                            </div>
                            @using (Html.BeginForm("Index", "AdminLogin", FormMethod.Post))
                            {

                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" name="AdminMail" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email Adresinizi Girin...">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" name="AdminPassword" id="exampleInputPassword" placeholder="Şifre">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Giriş Yap</button>
                            }
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Temel eklenti JavaScript -->
    <script src="~/startbootstrap-sb-admin-2-gh-pages/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Tüm sayfalar için özel scriptler -->
    <script src="~/startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>
    <script>
        $(document).ready(function() {
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
</body>
</html>
