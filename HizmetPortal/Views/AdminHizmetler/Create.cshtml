@model EntityLayer_HizmetPortal.Concrate.Hizmetler

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Hizmet Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("Create", "AdminHizmetler", FormMethod.Post,new {enctype="multipart/form-data"}))
{
    <div class="form-group">
        @Html.Label("Hizmet Name")
        @Html.TextBoxFor(x => x.HizmetName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HizmetName)
        <br />
        @Html.Label("Hizmet Description")
        @Html.TextAreaFor(x => x.HizmetDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HizmetDescription)
        <br />
        @Html.Label("Hizmet Image")
        <input type="file" name="HizmetlerImage" />
        <br />
        @Html.Label("Hizmet Icon")
        <input type="file" name="HizmetIconFile" />
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
}