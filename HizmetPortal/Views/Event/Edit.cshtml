@model EntityLayer_HizmetPortal.Concrate.Event

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>güncelleme sayfası</h1>
<br />
@using (Html.BeginForm("Edit", "Event", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Event ID")
        @Html.TextBoxFor(x => x.EventId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Event Title")
        @Html.TextBoxFor(x => x.EventTitle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Event Açıklama")
        @Html.TextBoxFor(x => x.EventDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Event Kapasite")
        @Html.TextBoxFor(x => x.EventCapacity, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Tarih (Date)") <input type="date" id="EventDate" name="EventDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
}