@model EntityLayer_HizmetPortal.Concrate.Lesson
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Ders Güncelleme Sayfası</h1>
<br />
@using (Html.BeginForm("Edit", "AdminLesson", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Lesson Id")
        @Html.TextBoxFor(x => x.LessonId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Lesson Title")
        @Html.TextBoxFor(x => x.LessonTitle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Hizmet Description")
        @Html.TextAreaFor(x => x.LessonDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Lesson Image")
        <input type="file" name="LessonImage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
}