@model EntityLayer_HizmetPortal.Concrate.Reservation

@{
    ViewBag.Title = "AddReservation";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("AddReservation", "AdminReservation", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Event")
        <p>@ViewBag.Event.EventTitle</p>
        @Html.HiddenFor(model => model.EventId)  <!-- Hidden field for event ID -->
    </div>

    <div class="form-group">
        @Html.Label("Select User")
        @Html.DropDownList("UserId", new SelectList(ViewBag.Users, "UserId", "UserName"), "Select User", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Reservation Date")
        @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Status")
        @Html.EditorFor(model => model.ReservationStatues, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ReservationStatues, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Create Reservation" class="btn btn-primary" />
}